{
	"variables": {
		"host_port": "8080",
		"repo_url": "https://github.com/nasa-gibs/onearth.git",
		"repo_tag": "0.8.0"
	},
	"builders": [
	{
		"type": "docker",
		"image": "centos:6",
		"export_path": "onearth-docker.tar"
	}],
	"provisioners": [
		{
			"type": "file",
			"source": "./resources",
			"destination": "/home/onearth"
		},
		{
			"type": "shell",
			"environment_vars": ["HOST_PORT={{user `host_port`}}", "REPO_URL={{user `repo_url`}}", "REPO_TAG={{user `repo_tag`}}"],
			"script": "bootstrap-docker.sh"
		}		
	],
	"post-processors": [
		{
			"type": "docker-import",
			"repository": "gibs/onearth",
			"tag": "{{ user `repo_tag` }}"
		}]
}
